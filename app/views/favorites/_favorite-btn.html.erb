<div id="favorite-btn_<%= @studio.id %>">
  <% if @studio.favorited_by?(current_user) %>
    <%= link_to studio_favorites_path(@studio), method: :DELETE, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <% end %>
    <%= @studio.favorites.count %>　いいね
  <% else %>
    <%= link_to studio_favorites_path(@studio), method: :POST, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i>
    <% end %>
    <%= @studio.favorites.count %>　いいね
  <% end %>
</div>