<div class="row">
  <div class="col-lg-11 col-sm-12 mx-auto">
    <div class="d-flex flex-column search-image">
      <h3 class="search-logo">さあ、スタジオをディグろう</h3>
      <%= form_with url: searches_studios_url, method: :get, local: true do |f| %>
      <div class="form-inline">
        <%= f.text_field :search, placeholder: "スタジオ名,場所,etc...", class: "form-control input"%>
      </div>
      <div class="form-inline">
        <%= f.submit "検索", class: "btn btn-light mx-auto " %>
      </div>
      <% end %>
    </div>
  </div>
</div>
