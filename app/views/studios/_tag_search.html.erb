<div class="row">
  <div class="col-lg-10 offset-lg-1 mx-auto">
    <div class="location-search">
      <%= link_to maps_studios_path, class:"btn btn-danger btn-lg btn-block" do %>
        <i class="far fa-compass"></i>
        　現　在　地　か　ら　探　す
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-10 offset-lg-1 col-12">
    <h2 class="area-logo"><i class="fas fa-fire-alt"></i>人気エリアから探す</h2>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-12">
    <div class="row">
      <div class="col-lg-4 offset-lg-2 area text-center col-12"><%= link_to image_tag('shinjuku.jpg',:width => "355",:height => "150" ), searches_studios_path(search: "新宿"), class: "area-image" %></div>
      <div class="col-lg-4 area text-center  col-12"><%= link_to image_tag('ikebukuro.jpg',:width => "355",:height => "150" ), searches_studios_path(search: "池袋"), class: "area-image" %></div>
    </div>
    <div class="row area-search">
      <div class="col-lg-4 offset-lg-2 area text-center col-12"><%= link_to image_tag('shibuya.jpg',:width => "355",:height => "150" ), searches_studios_path(search: "渋谷"), class: "area-image" %></div>
      <div class="col-lg-4 area text-center  col-12"><%= link_to image_tag('akiba.jpg',:width => "355",:height => "150" ), searches_studios_path(search: "秋葉原"), class: "area-image" %></div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-10 offset-lg-1 col-sm-12">
    <h2 class="tag-logo"><i class="fas fa-tags"></i>タグから探す</h2>
  </div>
</div>
<div class="row">
  <div class="col-lg-10 offset-lg-1 col-sm-12">
    <% @tags.each do |tag| %>
      <%= link_to tag.name, searches_studios_path(tag_id: tag.id), class: "btn btn-success tag-search-name" %>
    <% end %>
  </div>
</div>
