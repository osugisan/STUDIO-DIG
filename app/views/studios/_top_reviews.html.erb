<div class="swiper-container">
<div class="swiper-wrapper">
<% reviews.each do |review| %>
    <div class="swiper-slide">
    <div class="card studio-items">
      <div class="card-body">

        <div class="card-title">
          <%= link_to studio_path(review.studio) do%>
            <%= review.studio.name %>
          <% end %>
        </div>


        <div class="card-text">
          <!--星評価表示-->
          <div id="star-rank-<%= review.id %>">
            <strong><%= review.rank %>　</strong>
          </div><br>
          <script>
          $('#star-rank-<%= review.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= review.rank %>,
          });
          </script>
          <!--星評価表示-->
        </div>

        <div class="card-text">
          <span>「<%= review.title %>」</span>
        </div>

        <div clas="card-text">
          <%= review.body.truncate(30) %>
        </div>

        <div class="card-text">
          <span>投稿日：<%= time_ago_in_words(review.created_at).upcase + "前　" %></span>
        </div>

      </div>
    </div>
    </div>
<% end %>
</div>
<div class="swiper-button-prev"></div>
<div class="swiper-button-next"></div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.3/js/swiper.min.js"></script>
<script>
$( function() {
    var swiper = new Swiper('.swiper-container', {
      	spaceBetween: 10,
	      slidesPerView: 4,
      	mousewheel: {
      		forceToAxis: false,
      		invert: false
      	},
      	keyboard: true,
      	navigation: {
      		nextEl: '.swiper-button-next',
      		prevEl: '.swiper-button-prev'
      	},
        autoplay: {
      		delay: 3000,
      		stopOnLastSlide: false,
      		disableOnInteraction: false,
      		reverseDirection: false
      	},
    } );
} );
</script>