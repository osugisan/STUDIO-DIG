<div class="studio-new-logo text-center">
  <h2>ユーザー情報編集</h2>
</div>
<div class="card devise-card col-lg-6 mx-auto">
    <div class="form-wrap">

      <% if @user.errors.any?%>
      <div class="error-message">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <div class="user-edit-image text-center">
            <%= attachment_image_tag @user, :profile_image, size:"60x60", class: "profile_image", fallback: "no_user.jpg" %>
          </div>
          <div class="text-center">
            <%= f.label :profile_image, "サムネイル" %>
          </div>
          <div class="text-center">
            <%= f.attachment_field :profile_image, placeholder: "サムネイル画像", class: "user-edit-form" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

    </div>
</div>