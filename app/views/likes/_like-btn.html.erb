<div id="like-btn_<%= studio.review.id %>">
  <% if @studio.review.favorited_by?(current_user) %>
    <div class="like-smallitem">
      <%= link_to studio_review_likes_path(studio, studio.review), method: :DELETE, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <% end %>
      <div class="like-string">
        <%= studio.review.likes.count %>
        <span>　いいね</span>
      </div>
    </div>
  <% else %>
    <div class="like-smallitem">
      <%= link_to studio_review_likes_path(studio, studio.review), method: :POST, remote: true do %>
        <i class="far fa-heart" style="color: red;"></i>
      <% end %>
      <div class="like-string">
        <%= studio.review.likes.count %>
        <span>　お気に入り</span>
      </div>
    </div>
  <% end %>
</div>